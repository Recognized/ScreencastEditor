<idea-plugin>
    <id>vladsaif.screencasteditor.plugin</id>
    <name>Screencast Editor</name>
    <version>0.4</version>
    <vendor email="vladsayf@gmail.com" url="vk.com/recog">Me</vendor>

    <description><![CDATA[
    Plugin for editing combined audio/video data.
    Provides audio editor, audio player.
    Usage: Tools -> Open Audio
    ]]></description>

    <idea-version since-build="181.0"/>

    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileEditorProvider implementation="vladsaif.syncedit.plugin.lang.transcript.TranscriptFileEditorProvider"/>
        <fileTypeFactory implementation="vladsaif.syncedit.plugin.lang.transcript.psi.TranscriptViewFileTypeFactory"/>
        <lang.parserDefinition language="TranscriptViewLanguage"
                               implementationClass="vladsaif.syncedit.plugin.lang.transcript.psi.TranscriptParserDefinition"/>
        <fileTypeFactory implementation="vladsaif.syncedit.plugin.lang.transcript.psi.InternalTranscriptFileTypeFactory"/>
        <lang.syntaxHighlighterFactory language="TranscriptViewLanguage"
                                       implementationClass="vladsaif.syncedit.plugin.lang.transcript.psi.TranscriptHighlighterFactory"/>
        <renameHandler implementation="vladsaif.syncedit.plugin.lang.transcript.refactoring.TranscriptRenameHandler"/>
        <!--Declare the application level service -->
        <!--<applicationService serviceInterface="vladsaif.syncedit.plugin.synchronization.SynchronizationManager"-->
        <!--serviceImplementation="vladsaif.syncedit.plugin.synchronization.impl.SynchronizationManagerImpl"/>-->
    </extensions>
    <!--<project-components>-->
    <!--<component>-->
    <!--<implementation-class>vladsaif.syncedit.plugin.synchronization.EditorFactoryListenerComponent-->
    <!--</implementation-class>-->
    <!--</component>-->
    <!--</project-components>-->
    <actions>
        <!--<action id="downloadTranscriptAction" class="vladsaif.syncedit.plugin.actions.RecognizeAudioAction"-->
        <!--text="Get transcript" description="Get transcript of audio file">-->
        <!--<add-to-group group-id="ToolsMenu" anchor="last"/>-->
        <!--</action>-->
        <action id="vladsaif.syncedit.plugin.audioview.toolbar.OpenAudioAction"
                class="vladsaif.syncedit.plugin.audioview.toolbar.OpenAudioAction"
                text="Open audio" description="Opens audio waveform view">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>